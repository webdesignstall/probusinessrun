.ccForm
    background-color white
    position fixed
    z-index 2
    width: 100%
    height 100%
    top 0 
    left: 0
    text-align: center

.ccform_form
    width: auto;
    height auto
    position: absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)
    display inline-block 
    input
        border-radius: 10px;
        padding: 3px 10px;
        -webkit-box-shadow: 0px 5px 63px -13px rgba(60,190,230,1);
        -moz-box-shadow: 0px 5px 63px -13px rgba(60,190,230,1);
        box-shadow: 0px 5px 63px -13px rgba(60,190,230,1);
    button
        border-radius: 5px
        border: none
        padding: 5px 15px
        text-transform: uppercase
        font-family: monospace
    button:nth-child(2)
        background-color: #f39c12
        color white
        margin-right: 10px
        &:hover
            -webkit-box-shadow: 0px 2px 17px -2px #f39b13;
            box-shadow: 0px 2px 17px -2px #f39b13;
    button:nth-child(3)
        background-color: #2980b9
        color white 
        &:hover
            -webkit-box-shadow: 0px 2px 17px -2px #2980b9;
            box-shadow: 0px 2px 17px -2px #2980b9;