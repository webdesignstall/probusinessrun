.statistic
    margin-top 20px

.statistic__chart
    margin 0 auto

.chart_list_render
    border 1px solid #DBDBDB
    display: inline-block
    margin: 5px
    border-radius 10px
    padding 2px 2px 2px 10px
    .value
        background-color #e74c3c
        display: inline-block
        color white
        padding: 0 10px
        margin-left: 10px
        margin-right: -4px;
    .percent
        background-color #2980b9
        border-radius: 0 7px 7px 0
        display: inline-block
        color white
        padding: 0 10px

.statistic_menu
    background-color #EDF0F1
    border-radius 10px
    color #4599DF
    box-shadow: none
    margin-bottom 20px
    height auto
    padding-left: 40px
    span
        margin-right: 20px
